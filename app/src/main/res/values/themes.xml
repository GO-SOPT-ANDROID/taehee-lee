<resources>
    <!-- Base application theme. -->
    <style name="Theme.GOSOPTAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Neutral Key Color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.HaeTi" parent="">
        <item name="android:fontFamily">@font/bold_font</item>
        <item name="fontWeight">600</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.HaeTi.Large">
        <item name="fontWeight">800</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.HaeTi.SubTitle">
        <item name="fontWeight">700</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.HaeTi.SubTitle.grey_700">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="TextAppearance.HaeTi.BodyLarge">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.HaeTi.BodyMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.HaeTi.BodyMedium.grey_700">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize15Percent" parent="">
        <item name="cornerSize">15%</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="textInputLayout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/text_input_background</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_radius</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/rotating_img_loading</item>
        <item name="android:indeterminateTint">@color/primary</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

</resources>