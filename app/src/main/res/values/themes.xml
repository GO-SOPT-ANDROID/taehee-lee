<resources>
    <!-- Base application theme. -->
    <style name="Theme.GOSOPTAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Neutral Key Color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.Title.Large" parent="">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.SubTitle.large.grey" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="TextAppearance.SubTitle.large.black" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize15Percent" parent="">
        <item name="cornerSize">15%</item>
    </style>

</resources>